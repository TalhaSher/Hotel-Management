<% layout("/layout/adminboilerplate") %>

<link rel="stylesheet" href="/css/newroom.css" />

<div class="row">
  <h1 class="text-center">NEW ROOM</h1>
  <div class="col-md-6 offset-md-3">
    <div class="card mb-3">
      <div class="card-body">
        <form action="/rooms" method="post">
          <div class="mb-3">
            <label for="name">Room ID</label>
            <input
              type="text"
              name="room[name]"
              id="name"
              class="form-control"
              required
            />
          </div>
          <div>
            <label for="city">City</label>
            <input
              type="text"
              name="room[city]"
              id="city"
              class="form-control"
              required
            />
          </div>
          <div>
            <label for="maxG">Maximum Guests</label>
            <input
              type="number"
              name="room[maxguests]"
              id="maxG"
              class="form-control"
              required
            />
          </div>
          <div>
            <label for="beds">Number of Beds</label>
            <input
              type="Number"
              name="room[beds]"
              id="beds"
              class="form-control"
              required
            />
          </div>
          <div>
            <label for="bathrooms">Number of bathrooms</label>
            <input
              type="Number"
              name="room[bathrooms]"
              id="bathrooms"
              class="form-control"
              required
            />
          </div>
          <div>
            <label for="Description">Description</label>
            <textarea
              name="room[description]"
              id="Description"
              cols="10"
              rows="5"
              class="form-control"
              required
            ></textarea>
          </div>
          <div class="mb-3">
            <label for="image">Image Src</label>
            <input
              type="text"
              name="room[image]"
              id="image"
              class="form-control"
              required
            />
          </div>
          <button type="submit" class="btn btn-primary mb-3">ADD ROOM</button>
        </form>
      </div>
    </div>
  </div>
</div>
